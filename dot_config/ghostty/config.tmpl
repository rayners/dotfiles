# Ghostty configuration with font standardization
font-family = {{ .fonts.monospace }}
font-size = {{ .fonts.monospace_size }}
{{ if .fonts.monospace_ligatures }}
font-ligatures = true
{{ else }}
font-ligatures = false
{{ end }}
font-thicken = true

# Window appearance
macos-titlebar-style = hidden

# Optional fallback fonts can be specified if needed
# font-family-fallback = {{ index .fonts.fallback_monospace 0 }},{{ index .fonts.fallback_monospace 1 }}